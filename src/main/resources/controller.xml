<?xml version="1.0" encoding="UTF-8"?>
<action-controller>
	<action>
		<name>loginAction</name><!--name here must be the same as id in context.xml-->
		<result>
			<name>success</name>
			<type>forward</type>
			<value>success_view.xml</value>
		</result>
		<result>
			<name>fail</name>
			<type>redirect</type>
			<value>login_fail.jsp</value>
		</result>
        <result>
            <name>error</name>
            <type>redirect</type>
            <value>login_error.jsp</value>
        </result>
	</action>
	<action>
		<name>logoutAction</name><!--name here must be the same as id in context.xml-->
		<result>
			<name>success</name>
			<type>redirect</type>
			<value>/login.html</value>
		</result>
		<result>
			<name>fail</name>
			<type>redirect</type>
			<value>/login.html</value>
		</result>
	</action>
</action-controller>
